<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="CiyeParallelTestSuite" verbose="1" parallel="methods" thread-count="3" data-provider-thread-count="3">
    <parameter name="environment" value="dev"/>

    <!-- Device Configuration Parameters -->
    <parameter name="deviceList" value="emulator-5554,emulator-5556,emulator-5558"/>
    <parameter name="deviceNames" value="Pixel_7_Pro_API_34,Pixel_8_API_34,Pixel_9_API_34"/>

    <listeners>
        <listener class-name="listeners.AllureListener"/>
    </listeners>

    <!-- Parallel Login Tests - Device 1 -->
    <test name="ParallelLoginTests_Device1" preserve-order="false">
        <parameter name="deviceId" value="device1"/>
        <parameter name="deviceName" value="emulator-5554"/>
        <classes>
            <class name="tests.ParallelLoginTests"/>
        </classes>
    </test>

    <!-- Parallel Login Tests - Device 2 -->
    <test name="ParallelLoginTests_Device2" preserve-order="false">
        <parameter name="deviceId" value="device2"/>
        <parameter name="deviceName" value="emulator-5556"/>
        <classes>
            <class name="tests.ParallelLoginTests"/>
        </classes>
    </test>

    <!-- Parallel Login Tests - Device 3 -->
    <test name="ParallelLoginTests_Device3" preserve-order="false">
        <parameter name="deviceId" value="device3"/>
        <parameter name="deviceName" value="emulator-5558"/>
        <classes>
            <class name="tests.ParallelLoginTests"/>
        </classes>
    </test>

    <!-- Data-driven parallel execution -->
    <test name="DataDrivenParallelTests" preserve-order="false">
        <classes>
            <class name="tests.DataDrivenParallelTests"/>
        </classes>
    </test>
</suite>